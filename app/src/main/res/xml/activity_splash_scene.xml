<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintVertical_bias="0.093"
            android:layout_height="166dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.068"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="176dp"
            android:id="@+id/imageView" />
        <Constraint
            android:id="@+id/textView2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="29dp"
            android:layout_height="13dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteY="386dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintVertical_bias="0.112"
            android:layout_height="163dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="175dp"
            android:id="@+id/imageView" />
        <Constraint
            android:id="@+id/textView2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteY="386dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
      >

        <KeyFrameSet >
            <KeyTimeCycle
                motion:motionTarget="@+id/textView2"
                motion:framePosition="0"
                motion:wavePeriod="1"

                motion:waveOffset="0.5" />
            <KeyTimeCycle
                motion:motionTarget="@+id/textView2"
                motion:framePosition="0"
                motion:wavePeriod="1"

                motion:waveOffset="0.5" />
        </KeyFrameSet>

    </Transition>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end" />
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="animateToEnd" />
</MotionScene>